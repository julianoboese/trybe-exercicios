{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/state-in-constructor": ["error", "never"],
        "react/jsx-filename-extension": "off",
        "react/jsx-props-no-spreading": "off",
        "no-alert": "off",
        "react/button-has-type": ["error", {"reset": true}]
    }
}
